<?xml version="1.0" encoding="utf-8"?>
<device-admin>
    <uses-policies>
        <!-- Core Security Policies -->
        <force-lock />
        <encrypted-storage />
        <limit-password />
        <reset-password />
        <expire-password />
        <disable-camera />
        <watch-login />
        <wipe-data />
        
        <!-- Advanced Enterprise Features -->
        <disable-keyguard-features />
    </uses-policies>
    
    <!-- Enterprise Device Ownership Transfer Support -->
    <support-transfer-ownership />
</device-admin>