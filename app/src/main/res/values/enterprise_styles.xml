<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Enterprise Text Styles -->
    <style name="Enterprise.TextAppearance.Headline1">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/enterprise_text_primary</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>
    
    <style name="Enterprise.TextAppearance.Headline2">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/enterprise_text_primary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    
    <style name="Enterprise.TextAppearance.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/enterprise_text_primary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    
    <style name="Enterprise.TextAppearance.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/enterprise_text_secondary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    
    <style name="Enterprise.TextAppearance.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/enterprise_text_hint</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    
    <!-- Enterprise Button Styles -->
    <style name="Enterprise.Button.Primary">
        <item name="android:background">@drawable/enterprise_button_ripple</item>
        <item name="android:textColor">@color/enterprise_text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:elevation">4dp</item>
    </style>
    
    <style name="Enterprise.Button.Secondary">
        <item name="android:background">@drawable/enterprise_card_ripple</item>
        <item name="android:textColor">@color/enterprise_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:elevation">2dp</item>
    </style>
    
    <!-- Enterprise Card Styles -->
    <style name="Enterprise.Card">
        <item name="android:background">@drawable/enterprise_card_background</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">16dp</item>
    </style>
    
    <style name="Enterprise.Card.Clickable">
        <item name="android:background">@drawable/enterprise_card_ripple</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    
    <!-- Enterprise EditText Styles -->
    <style name="Enterprise.EditText">
        <item name="android:background">@drawable/enterprise_edittext_background</item>
        <item name="android:textColor">@color/enterprise_text_primary</item>
        <item name="android:textColorHint">@color/enterprise_text_hint</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:layout_height">48dp</item>
    </style>
    
    <!-- Security Status Styles -->
    <style name="Enterprise.Status.High">
        <item name="android:textColor">@color/enterprise_security_high</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>
    
    <style name="Enterprise.Status.Medium">
        <item name="android:textColor">@color/enterprise_security_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    
    <style name="Enterprise.Status.Low">
        <item name="android:textColor">@color/enterprise_security_low</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    
    <!-- MIUI Integration Styles -->
    <style name="Enterprise.MIUI.Badge">
        <item name="android:background">@drawable/enterprise_card_background</item>
        <item name="android:textColor">@color/miui_orange</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:paddingVertical">4dp</item>
    </style>
</resources>
